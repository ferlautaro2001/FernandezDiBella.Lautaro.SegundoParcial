<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FormularioController">
   <children>
      <Label layoutX="30.0" layoutY="20.0" text="Datos del Robot">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <Label layoutX="30.0" layoutY="60.0" text="Tipo:" />
      <ComboBox fx:id="cmbTipo" layoutX="30.0" layoutY="80.0" onAction="#seleccionarTipo" prefWidth="290.0" />
      
      <Label layoutX="30.0" layoutY="120.0" text="Nombre:" />
      <TextField fx:id="txtNombre" layoutX="30.0" layoutY="140.0" prefWidth="290.0" />
      
      <Label layoutX="30.0" layoutY="180.0" text="Nro Serie (Único):" />
      <TextField fx:id="txtSerie" layoutX="30.0" layoutY="200.0" prefWidth="135.0" />
      
      <Label layoutX="185.0" layoutY="180.0" text="Energía (0-100):" />
      <TextField fx:id="txtEnergia" layoutX="185.0" layoutY="200.0" prefWidth="135.0" />
      
      <Label fx:id="lblDatoEspecifico" layoutX="30.0" layoutY="240.0" text="Dato Específico:" />
      <TextField fx:id="txtDatoEspecifico" layoutX="30.0" layoutY="260.0" prefWidth="290.0" />
      
      <Button layoutX="30.0" layoutY="320.0" onAction="#confirmar" prefHeight="40.0" prefWidth="100.0" text="Guardar" />
      <Button fx:id="btnCancelar" layoutX="220.0" layoutY="320.0" onAction="#cancelar" prefHeight="40.0" prefWidth="100.0" text="Cancelar" />
   </children>
</AnchorPane>